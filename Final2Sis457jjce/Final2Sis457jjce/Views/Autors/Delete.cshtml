@model Final2Sis457jjce.Models.Autor

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Autor</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Nombres</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombres)
            </dd>
            <dt class="col-sm-2">Apellidos</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Apellidos)
            </dd>
            <dt class="col-sm-2">Nacionalidad</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nacionalidad)
            </dd>
            <dt class="col-sm-2">UsuarioRegistro</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UsuarioRegistro)
            </dd>
            <dt class="col-sm-2">FechaRegistro</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaRegistro)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index">Regresar a la Lista de Autores</a>
        </form>
    </div>
</div>
